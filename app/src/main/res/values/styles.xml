<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTitleBold</item>
    </style>

    <style name="ToolbarTitleBold" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/card_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/button_text_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="drawableEndCompat">@drawable/ic_arrow_right</item>
    </style>

</resources>